<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offeset-2">
   
    <h3>History of India:</h3>
</div>
    <div class="card col-6 offeset-2">
        <img src="<%=listing.image %>" class="card-img-top show-img" alt="Images">
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            <%= listing.description %> <br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
            <%= listing.location %><br>
            <%= listing.country %>

        </p>
        <br>
        <div class="col-1">  <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark">Edit </a></div>
       
    <br>
    <div class="col-1">
         <form method="post" action="/listings/<%=listing._id%>?_method=DELETE"> <button class="btn btn-dark">Delete</button></form>
    </div>
   
        </div>
    </div>
    <div class="col-8 offeset-3">
        <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="review " class="form-label"><b>Rating</b></label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]"  class="form-range"required  >
            </div>
            <div  class="mb-3 mt-3">
                <label for="Comment" class="form-label">Comment</label>
              <textarea name="Review[comment]" id="Comment" cols="30" rows="5"   class="form-control" required></textarea>
              <div class="valid-feedback">Thanks for the Review</div>
              <div class ="invalid-feedback">Please Add the review</div>
            </div>
            <br>
            <button class="btn btn-dark">Submit</button>
        </form>
        <hr>
       <p><b>All reviews</b></p></h4>
    
     

    <ul>
        <% for(review of listing.reviews) {%>
         <div class="card">   
            <div class="card-body">
                <ul>
              <li><h5 class="card-title">These review was given at:<%= review.createdAt %></h5></li>  
               <li><p class="card-text"><b> Rating for these place:<%= review.rating%> stars</b></p></li> 
            </ul>
            </div>
            <form class="mb-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class=" btn btn-sm btn-dark">Delete</button>
            </form>
         </div>  
           <%     }  %>
   
       </ul>
        
         
      
    
    </div>
</div>


