<% layout("/layouts/boilerplate") %>
<div class="row  ">
    <div class="col-6 offset-3" >
        <h1 class="col-6 offset-3 mt-3 mb-4">Create Account </h1>
       <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3"> 
            <label for="username" class="form-label">username</label>
            <input name="username"
            id="username"
             type="text" 
             class="form-control"
             required
             >
             <div class="invalid-feedback">Enter the username </div>
            <div class="valid-feedback">UserName Looks Good! </div>

            </div>
            <div class="mb-3"> 
                <label for="email" class="form-label">email</label>
                <input name="email"
                id="email"
                 type="text" 
                 class="form-control"
                 required
                 >
                 <div class="invalid-feedback">Enter the email </div>
                <div class="valid-feedback">email Entered </div>
    
                </div>
                <div class="mb-3"> 
                    <label for="password" class="form-label">password</label>
                    <input name="password"
                    id="password"
                     type="text" 
                     class="form-control"
                     required
                     >
                     <div class="invalid-feedback">Enter the password </div>
                    <div class="valid-feedback">Password has been Entered </div>
        
                    </div>
                    <button class="btn btn-success">SignUp</button>
       </form>
    </div>
</div>